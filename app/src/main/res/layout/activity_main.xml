<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/amoung"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/amoung"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textName"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:text="Adhyl Gucianno"
            android:layout_below="@+id/amoung"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senior Developer"
            android:textAlignment="center"
            android:layout_below="@id/textName"
            android:layout_marginTop="2dp"
            android:textColor="#fed"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_outlineradius"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="250dp">
        <TextView
            android:id="@+id/labelPhoto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="160"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_below="@+id/labelFollowers"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/labelFollowers"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2254"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_below="@+id/labelFollowers"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/labelFollowing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="520"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_below="@+id/labelFollowers"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"/>

     </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/atas"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_email_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="210dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="adhyl.gucianno@gmail.com"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/ic_phone_android_24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="213dp"
            android:layout_height="22dp"
            android:layout_marginStart="20dp"
            android:text="081297685455"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/ic_group_add_24" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="214dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:text="Add to group"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/ic_forum_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="217dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:text="Show All Comments"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>